    
    <%- include('header') %>
   
        <h2>Editar Vaga : 
            <a href = "/admin/vagas"> Vagas</a>
        </h2>
        <div>
           <form method="POST">
               <label>Título :</label> <input type="text" name="titulo" value="<%= vaga.titulo %>"> <br>
               <label>Descrição :</label> <textarea name="descricao"> <%= vaga.descricao %> </textarea> <br>
               <label>Categoria :</label>
               <select name="categoriaId">
                   <% categorias.forEach(categoria => { %>
                        <option value = "<%= categoria.id %>" <% if(categoria.id== vaga.categoriaId) { %> selected <% } %> ><%= categoria.categoria %> </option>
                        
                   <%})%>
                  
                </select>
                <br>
                <button>Salvar vaga</button>
           </form> 



        </div>
  
    <%- include('footer') %>
